def say(words)
  use_synth :dark_sea_horn
  use_synth_defaults release: 2.0 
  t = scale(:a2, :major_pentatonic, num_octaves: 2)
  notes = words.split("").map(&:ord).map{|n| t[n%t.length-1]}
  notes.map{|n| if n.chr == " "
                  play n, release: 4, attack: 3
                  sleep 4
                else
                play n, release: 2.0, attack: 2
                  sleep 2.0
                end}
end

say <<-POEM
Tiger tiger burning bright in the forest of the night
POEM