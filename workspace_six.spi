
live_loop :melo do
  sample_and_sleep Corrupt[/F#/,[9,9,9,10]].tick(:r), amp: 3.0
end

live_loop :hats do
  sample Corrupt[/paper/,2..6].tick(:hat), cutoff: (range 80,120,10).tick(:range)
  sleep 0.5
end

live_loop :kickers do
  sample Corrupt[/kick/,0]
  sleep 4.0
end

live_loop :snare do
  sleep 2.0
  sample Corrupt[/snare/,1]
end