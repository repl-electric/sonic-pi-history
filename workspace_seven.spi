bar = 1/8.0

live_loop :metro do
  cue :sixteen; sleep bar/2; cue :middle; sleep bar/2;
end

live_loop :kick do
  sync :sixteen
  sample :drum_heavy_kick
  15.times{sync :sixteen}
end

live_loop :striate do

  8.times {
  sync :middle
  sample :elec_blip
  }
  
  8.times {
  sync :sixteen
  sample :elec_blip
  }

end