
live_loop :b do
  sample :sn_dolf
  sync :hit
  sample [:loop_industrial].choose
  sync :kick
  with_fx :reverb do
    sample [:loop_industrial].choose
  end
end

n=0
live_loop :a do
  sample :drum_bass_hard
  sample [:loop_industrial].choose, amp: 0.1

  cue :kick
  if n % 2 == 0 
    cue :hit
    with_fx :bitcrusher, bits: 4+n%7 do
      sample :loop_amen
    end
  end
  
  sample :loop_amen
  sleep sample_duration :loop_amen
  n+=1
end