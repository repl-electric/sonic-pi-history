live_loop :a do
  sample :sn_dolf
  sync :boom
  sample :loop_industrial  
  sync :kick
  sample :loop_industrial

end

n = 0
live_loop :b do
  sample :drum_bass_hard
  sample :loop_amen
  sample :loop_industrial, amp: 0.1  
  cue :kick

  case n%2
    when 0 
    cue :boom
    with_fx :bitcrusher, bits: 4+n%7 do
      sample :loop_amen
    end
  end
  sleep sample_duration :loop_amen
  n+=1
end