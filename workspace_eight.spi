def say(words)
  use_synth :supersaw
  use_synth_defaults release: 2.0 
  t = scale(:a3, :major_pentatonic, num_octaves: 2)
  notes = words.split("").map(&:ord).map{|n| t[n%t.length]}
  notes.map{|n| if n.chr == " "
                  play n, release: 8, attack: 0.1
                  sleep 8
                else
                play n, release: 6.0, attack: 0.1
                  sleep 6.0
                end}
end

say <<-POEM
Tiger tiger burning bright in the forest of the night
POEM