def chord_seq(*args)
  args.each_slice(2).reduce([]){|acc, notes| 
    chord_type = notes[1]
    i = if chord_type =~ /[abc]$/
      invert_char = chord_type[-1]
      {'a' => 1, 'b' => 2, 'c' => 3}[invert_char]
    else
      0
    end
    acc += chord(notes[0],notes[1], invert: i)
  }
end


chord_seq(*%w{Fs3 1})