
live_loop :drums do
  sample :sn_dolf
  sync :kick
  sample :loop_industrial

  sample :drum_bass_hard
  sync :mad
  sample :loop_industrial
end

n= 0
live_loop :amen do
  cue :kick
  sample :loop_amen
  sample :loop_industrial, amp: 0.1


  if(n%2 ==0)
  cue :mad
    with_fx(:bitcrusher, bits: 4+n%7 ){sample :loop_amen}
  end
  
  sleep sample_duration :loop_amen
  n+=1
end