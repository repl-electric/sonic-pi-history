n = 0

live_loop :drums do
  sample :drum_bass_hard
  sample :drum_cymbal_closed
  sample :loop_industrial, amp: 0.1
  
  if(n%4 == 0)
    cue :MAD
    with_fx(:bitcrusher, bits: 4+n%7){sample :loop_amen}
  end
  
  sample :loop_amen
  sleep sample_duration(:loop_amen)
  n+=1
end

live_loop :hihglights do
  sync :MAD
  sample :loop_industrial, amp: 1.0

  sync :MAD
  with_fx(:reverb, room: 10){sample :loop_industrial, amp: 1.0}
end