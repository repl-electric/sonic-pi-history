beat = 1/2.0

live_loop :ride do
  sleep beat/2.0
  sample :drum_cymbal_pedal, amp: 0.2
end

n=0
live_loop :drums do
  sample :drum_bass_hard
  sleep beat
  case n%6
  when 0
    with_fx(:reverb){
    with_fx(:slicer, phase: beat/100){
      sample :drum_snare_soft, amp: 1.1}}
  else
    sample :drum_snare_soft
  end
  sleep beat
  n+=1
end

live_loop :synth do
sleep 1
end