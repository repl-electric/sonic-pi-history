    8.times{tick;
      pp = (ing
        _ _ _ _    _ _ _ _    _ _ _ _   _ _ _ _
        _ _ _ _    _ _ _ _    _ _ _ _   _ _ _ _
        ).look

      sleep 1/8.0
    }
  end
end
