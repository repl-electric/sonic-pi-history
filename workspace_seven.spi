
live_loop :highs do
  sample :sn_dolf
  sync :higher
  sample [:loop_industrial, :loop_compus].choose

  sync :hit
  sample [:loop_industrial, :loop_compus].choose
end

n=0 
live_loop :drums do
  cue :hit
  sample :drum_bass_hard
  sample :loop_amen
  sample :loop_industrial, amp: 0.1

  case n%2
    when 0
    cue :higher
    with_fx :bitcrusher, bits: 4 + n%7 do
      sample :loop_amen
    end
end
  
  sleep sample_duration :loop_amen
  n+=1
  end