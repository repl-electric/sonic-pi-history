bar = 1.0

live_loop :time do
cue :one
sleep bar/4.0
cue :two
sleep bar/4.0
cue :three
sleep bar/4.0
cue :four
sleep bar/4.0

end

live_loop :kick do
sync :one, :three
sample Ambi[/kick/i,/hart/i], amp: (ring 1.0,0.5).tick
end

live_loop :snare do
sync :two,:four
sample Ambi[/snare/i, /fibres/i], amp: (ring 0.8,0.5).tick, attack: rrand(0.0,0.1)
end

live_loop :hat do
sync :one,:two,:three,:four
sample Ambi[/hat/].tick, amp: 0.0
end