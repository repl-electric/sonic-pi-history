bar = 1/2.0

set_volume! 4

live_loop :metro do
  cue :start; cue :quart;  cue :bar
  sleep bar
  cue :bar
  sleep bar
  cue :quart; cue :bar
  sleep bar
  cue :bar
  sleep bar
end

live_loop :fuzz do
with_fx :reverb do

with_fx :hpf, cutoff: 120 do
use_synth :dsaw
play degree(4, :A2, :major), release: bar*3, decay: bar*1, amp: 0.9, attack: 0.5
end
sleep bar*4
end
end


live_loop :drums do
  sync :quart
  play 

  sync :quart

  
  sync :quart


  sync :quart

  
end