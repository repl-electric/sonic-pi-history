

live_loop :darkness do
  sync :MAD
  use_synth :dark_sea_horn
  play :A1, release: 6
  sleep 6
end

n = 0
live_loop :drums do
  sample :drum_bass_hard

  sample :loop_amen
  if(n%8==0)
    cue :MAD
    with_fx(:bitcrusher){sample :loop_amen}
  end
  sleep sample_duration :loop_amen
  n+=1 
end

