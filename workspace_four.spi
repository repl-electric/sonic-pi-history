def harp_cc(cc,vv)
  n = case cc
  when :cutoff; 4
  when :gain;   5
  when :drive;  8
  when :charge; 9
  when :sound; 12
  when :phase; 13
  else
  end
  midi_cc n, (vv*127), port: :iac_bus_1, channel: 3
end


