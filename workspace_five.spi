live_loop :fuzz do
  n=0.2
  with_fx :echo do |r|
  with_fx :hpf, cutoff: 125 do
  use_synth :dsaw
  play degree(1, :A3, :major), release: bar*4, decay: bar*4, amp: 1.0, attack: bar

  with_synth :prophet do
  with_fx :hpf, cutoff: 120 do
    play :A2, release: bar*8, decay: bar*8, attack: bar*4
  end
  end

  4.times do |i|
  control r, phase: n
  n += 0.01
  sleep bar*2
  end
  end 
  end
  sleep bar/2
end