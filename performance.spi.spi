def vizz(*opts)
  ns="/"
  begin
    if !opts[0].is_a?(Hash)
      ns = "/#{opts[0].to_s}/"
      opts = opts[1..-1]
    end
    if opts
      (opts[0]||{}).keys.map{|k|
        if k==:camera
          unity "#{ns}camera/#{opts[0][k]}",1
        else
          unity "#{ns}#{k.to_s}", opts[0][k]
        end
      }
    else
      puts "->#{ns}"
      unity "#{ns}",1.0 #bang signal
    end
  rescue Exception
    puts $!
  end
end


vizz :tri
