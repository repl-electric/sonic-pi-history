use_bpm 127

#scale C, D, E♭, F, G, A♭, and B♭.
def pad(*args)
  params, opts = split_params_and_merge_opts_array(args)
  opts         = current_midi_defaults.merge(opts)
  n, vel = *params
  if n
    midi_note_on n,vel, *(args << {channel: 1})
    bass_cc(opts)
  end
end


