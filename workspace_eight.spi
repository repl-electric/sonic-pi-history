def say(words)
  with_fx :reverb, room: 100 do
  #with_fx :lpf do
  use_synth :growl
  t = scale(:a3, :major_pentatonic, num_octaves: 2)
  notes = words.split("").map(&:ord).map{|n| t[n%t.length]}
  notes.map{|n| if n.chr == " "
                  play n, release: 1, attack: 0.1
                  sleep 4
                else
                  play n, release: 1.0, attack: 0.1
                  sleep 2.0
                end
           }
end end

say <<-POEM
Burning in the night
POEM