live_loop :a do
  sync :high
  sample :sn_dolf
  sample :loop_industrial

  sync :kick
  sample :loop_industrial
end

n = 0
live_loop :b do
sample :drum_bass_hard
sample :loop_amen
cue :kick
  sample :loop_industrial, amp: 1

  case n%2
    when 0
      cue :high
      with_fx :bitcrusher, bits: 4 + n%7 do
        sample :loop_amen
        end  

  end

sleep sample_duration :loop_amen
  n+=1
end