n = 0
live_loop :g do
  x = [:drum_cymbal_closed, :drum_tom_low].shuffle.choose
  sync :fire
  if n%2 ==0
    sample :drum_cymbal_closed
  elsif n%4 == 1
    sample x, rate: 1.1
  end
  sleep 1/2
      sample :drum_cymbal_closed

  n+=1
end

live_loop :bassss do
  sample :loop_amen
  cue :fire
  sleep sample_duration :loop_amen
end