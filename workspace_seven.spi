
live_loop :drums do
  sample :sn_dolf
  sync :boom
  sample :loop_industrial
  sync :kick

  with_fx :reverb do
  sample :loop_industrial
  end
  end

n=0
live_loop :beats do 
  cue :kick
  sample :drum_bass_hard
  sample :loop_amen
  case n%4
  when 0
    cue :boom
  with_fx :bitcrusher, bits: 4+n%7 do
    sample :loop_amen
  end
  end

  sleep sample_duration :loop_amen
  n+=1
end