require "osc-ruby.rb"
@unity ||= OSC::UDPClient.new('localhost', 9000)

live_loop :loopey do
  tick
  sample Mountain[/subkick/,1]
  @unity.send("/astro/mix", 1.0)
  @unity.send("/astro/scale", 0.008)
  @unity.send("/stars/mix",  ring(1.0, 0.0).look)
  sleep 1
  @unity.send("/astro/mix", 0.0)
  sleep 1
end
