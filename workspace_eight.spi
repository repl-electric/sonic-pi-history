beat = 1/2.0

live_loop :ride do
  sleep beat/2.0
  sample :drum_splash_soft, amp: 0.2
end

n=0
live_loop :drums do
  sample :drum_bass_hard
  sleep beat
  case n%6
  when 0
    with_fx(:slicer, phase: 0.5){
      sample :drum_snare_soft}
  else
    sample :drum_snare_soft
  end
  sleep beat

  n+=1
end