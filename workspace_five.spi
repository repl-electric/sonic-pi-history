def bass(note, *args)
  if note.is_a?(Array)
    args = args << {sustain: note[1]}
    note = note[0]
  end
  args_h = resolve_synth_opts_hash_or_array(args)
  if(args_h[:cutoff])
    bass_cc(args_h[:cutoff])
  end
  midi note, *(args << {port: :iac_bus_1} << {channel: 5})
end
def bass_cc(vv)
  #6=>cutoff
  midi_cc 6, vv*127.0, port: :iac_bus_1, channel: 5
end

bass_cc 0.1
